@model IEnumerable<Core.Models.StudentsCourses>
@{
	ViewData["Title"] = "Manage Courses";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before  {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>
<!-- Page Content -->
<div class="content container-fluid">
	<!-- Page Header -->
	<div class="page-header">
		<div class="row align-items-center">
			<div class="col">
				<h3 class="page-title">Courses Registration</h3>
			</div>
		</div>
	</div>
</div>
	<!-- /Page Header -->
					
<div class="row">
	<div class="col-md-12">
		<div>
			@if (Model.Count() > 0)
			{
				<table class="table table-striped custom-table mb-0 datatable">
					<thead>
						<tr>
							<th style="width: 30px;">S/N</th>
							<th>Course</th>
							<th>Description</th>
							<th>User</th>
							<th>Date Created</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var course in Model)
						{
							<tr>
								<td></td>
								<td>@course.Course.Name</td>
								<td>@course.Course.Description</td>
								<td>@course.User.FirstName</td>
								<td>@course.DateCreated.Date</td>
							</tr>
						}
					</tbody>
				</table>
			}
			else
			{ 
				<div cclass="row p5 m-5">
					<div class="col-md-12 text-center p-5 m5">
						<h2>No Record Found</h2>
					</div>
				</div>
			}
			</div>
		</div>
	</div>
</div>
<!-- /Page Content -->

